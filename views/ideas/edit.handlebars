{{#each errors}}
    <div class="alert alert-danger">
        {{text}}
    </div>
{{else}}

{{/each}}
<div class="card card-body">
    <h3>Edit Video Ides</h3>
    <form action="/ideas/{{idea.id}}?_method=PUT" method="post">
        <div class="form-group">
            <label for="title">Title</label>
            <input value="{{idea.title}}" type="text" class="form-control" name="title">
        </div>
        <div class="form-group">
            <label for="details">Details</label>
            <textarea class="form-control" name="details" value="{{idea.details}}">{{idea.details}}</textarea>
        </div>
        <input type="hidden" name="_method" value="PUT">
        <button type="submit" class="btn btn-primary">Update</button>
    </form>
</div>